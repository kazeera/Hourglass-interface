<UploadTable>
    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2
            size: root.width, root.height

            Label:
                text: 'Name of Dataset'

            TextInput:
                multiline: False
                hint_text: 'Enter Text Here'

            Label:
                text: 'Numeric Matrix'

            Button:
                text: 'Upload File'

            Label:
                text: 'Row Annotations'

            Button:
                text: 'Upload File'

            Label:
                text: 'Column Annotations'

            Button:
                text: 'Upload File'

        Button:
            text: 'Upload'

<ComparisonTable>:
	GridLayout:
		cols:1

		ScrollView:
			GridLayout:
				id: container
				cols: 1
				size_hint_y: None
				height: self.minimum_height
				row_force_default: True
				row_default_height: dp(26)
        GridLayout:
            cols:2
		    Button:
			    text: "Add a Comparison (row)"
			    on_release: root.add_a_row()
            Button:
			    text: "Add filter"

<ComparisonTableRow>:
    orientation: "horizontal"

    TextInput:
        hint_text: "MainComparison"
    TextInput:
        hint_text: "Subgroup"
    Button:
        text: "+Filter"
    Button:
        text: "-"

<AdvancedOptions>
    GridLayout:
        cols: 2
        size: root.width, root.height

        Label:
            id: correlation_label
            text: 'Correlation Method'

        Spinner:
            id: correlation_spinner
            text: 'Correlation Method'
            values: ["Spearman", "Kendall", "Pearson"]
            on_text: root.correlation_clicked(correlation_spinner.text)

        Label:
            id: test_label
            text: 'Test Method'

        Spinner:
            id: test_spinner
            text: 'Test Method'
            values: ["Spearman", "Kendall", "Pearson"]
            on_text: root.test_clicked(test_spinner.text)

<KVTabLay>
    TabbedPanel:
        size: root.width, root.height
        do_default_tab: False
        tab_width: 300
        tab_height: 75

        TabbedPanelItem:
            text: 'Upload Data'
            UploadTable:

        TabbedPanelItem:
            text: 'Pick Comparisons'
            ComparisonTable:

        TabbedPanelItem:
            text: 'Make Groups'

        TabbedPanelItem:
            text: 'Customize Colours'

        TabbedPanelItem:
            text: 'Customize Stats'
            AdvancedOptions:

        TabbedPanelItem:
            text: 'Data Explorer'
